---
const {
    heading = "",
    subheading = "",
    buttonText = "",
    imagenUrl = "",
    link = {},
} = Astro.props;

import Link from "./Link.astro";

// crear la imagen a un objeto (asi lo tengo en mi query)
const image = typeof imagenUrl === "string" 
    ? { url: imagenUrl, alt: Astro.props.image?.alt || "Imagen sin descripci√≥n" } 
    : imagenUrl;
---

<style>
    .boton {
        background-color: black;
        padding: 14px;
        color: white;
    }

    .img-wrapper {
        width: 500px;

        .imagen {
            width: 100%;
        }
    }
</style>

<div>
    <h1>{heading}</h1>
    <p>{subheading}</p>

    <div class="img-wrapper">
        {image?.url && (
            <img
                class="imagen"
                src={image.url}
                alt={image.alt || "Imagen"}
            />
        )}
    </div>

    <Link
        link={{
            linkType: link?.linkType,
            href: link?.href,
            pageSlug: link?.page,
            postSlug: link?.post,
            openInNewTab: link?.openInNewTab,
        }}
        class="boton"
    >
        {buttonText && buttonText}
    </Link>
</div>