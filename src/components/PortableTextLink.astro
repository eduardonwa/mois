---
import Link from "./block/Link.astro";

const { node } = Astro.props

const linkData = node?.markDef?.link ? {
    linkType: node.markDef.link.linkType,
    href: node.markDef.link.href,
    pageSlug: node.markDef.link.pageSlug,
    postSlug: node.markDef.link.postSlug,
    openInNewTab: node.markDef.link.openInNewTab
} : {
    linkType: 'href',
    href: '#'
};
---

<Link link={linkData}>
    <slot/>
</Link>