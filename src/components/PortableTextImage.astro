---
import { urlForImage } from "@back/lib/url-for-image";

const { asset, alt, crop, hotspot } = Astro.props.node;

// si no encuentra una imagen
if (!asset) {
  return null;
}

const imageObject = { asset, crop, hotspot };

const url = urlForImage(imageObject)
  .width(1080)
  .height(720)
  .url();

const webpUrl = urlForImage(imageObject)
  .width(1080)
  .height(720)
  .format("webp")
  .url();
---

<picture>
  <source srcset={webpUrl} type="image/webp" />
  <img class="portable-img" src={url} alt={alt} />
</picture>
